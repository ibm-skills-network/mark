{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/dev.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "lint:staged": {},
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "test:staged": {
      "dependsOn": []
    }
  }
}
