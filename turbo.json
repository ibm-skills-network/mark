{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/dev.env"
  ],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "seed": {},
    "seed:update": {},
    "lint:staged": {},
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "test:staged": {
      "dependsOn": []
    }
  }
}