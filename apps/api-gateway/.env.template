###############################################################################
#  .env.template  ─ tracked by Git
#  DO NOT store plaintext secrets here.
#  It is safe to keep 1Password op:// URIs.
###############################################################################

# ────── Runtime ──────
NODE_ENV=development                 # development | staging | production

# ────── API Gateway ──────
API_GATEWAY_PORT=8000
MARK_API_ENDPOINT=http://localhost:4222   # internal API URL

# ────── Auth / Security ──────
AUTH_DISABLED=true                   # true = mock auth for local dev
SECRET= # enter your secret here                             

# ────── NATS Messaging ────── Optional, it's used for sending support tickets and 
NATS_USERNAME= # enter your secret here
NATS_PASSWORD= # enter your secret here
NATS_URL= # enter your secret here
NATS_ORGANIZATION=  # enter your secret here
NATS_PROGRAM= # enter your secret here
NATS_PROJECT= # enter your secret here

# ────── LTI Credential Manager ────── Optional, it's used for LTI 1.3
LTI_CREDENTIAL_MANAGER_ENDPOINT=http://localhost:8080
LTI_CREDENTIAL_MANAGER_USERNAME=         # op://… URI or leave blank
LTI_CREDENTIAL_MANAGER_PASSWORD=         # op://… URI or leave blank
