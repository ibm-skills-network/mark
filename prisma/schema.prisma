generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AssignmentType {
  AI_GRADED
  MANUAL
}

enum AssignmentDisplayOrder {
  DEFINED
  RANDOM
}

model Assignment {
  id            Int                  @id @default(autoincrement())
  name          String
  type          AssignmentType
  numRetries    Int
  numAttempts   Int
  allotedTime   String
  passingGrade  Int
  displayOrder  AssignmentDisplayOrder
}